@model DemoClass
<script>
    function addedItem() {
        alert('Item added successfully!');
    }
</script>
<form method="post" asp-action="Add" asp-controller="Demo">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Add Product</h2>
        </div>
        <div class="row mb-3">
            <div class="col-sm-2">
                <label asp-for="Id"></label>
            </div>
            <div class="col-sm-4">
            <input asp-for="Id" class="form-controls" />
            </div>
            <div class="col-sm-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Name" class="form-controls" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit" onclick="addedItem();">Add </button>

        </div>
    </div>
    <div class="text-center p-4">
        <a asp-action="Index" asp-controller="Category">Back To List</a>
    </div>

</form>

